<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:id="@+id/layout_id"
    android:orientation="vertical">

<!--todo: slider might need to be changed. Cardview might need to be removed.
            Find the relation between relativeLayout vs linearLayout
            Try downloading Android Cookbook-->
            <com.google.android.material.slider.Slider
                android:id="@+id/scrollHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cat_slider_left_margin"
                android:scrollbarSize="4dp"
                android:scrollbars="horizontal" />

            <com.google.android.material.slider.Slider
                android:id="@+id/scrollMinute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cat_slider_left_margin"
                android:scrollbarSize="4dp"
                tools:visibility="visible" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/subjectItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli"
                    android:importantForAutofill="no"
                    android:hint="@string/subjectHint"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subject"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/white"
                android:text="@string/saveTitle" />

</LinearLayout>